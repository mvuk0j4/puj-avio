<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.puj.controller.MenuController">
   <children>
      <ImageView fx:id="airportImg" fitHeight="400.0" fitWidth="609.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@aerodrom.jpg" />
         </image>
      </ImageView>
      <Button fx:id="passangerBtn" layoutX="95.0" layoutY="188.0" mnemonicParsing="false" onAction="#openPassanger" prefHeight="24.0" prefWidth="100.0" style="-fx-background-color: blue;" text="Putnici" textFill="#fffafa" />
      <Button fx:id="flightBtn" layoutX="423.0" layoutY="188.0" mnemonicParsing="false" onAction="#openFlight" prefHeight="24.0" prefWidth="100.0" style="-fx-background-color: blue;" text="Letovi" textFill="#f2eeee" />
      <Button fx:id="reservationBtn" layoutX="262.0" layoutY="188.0" mnemonicParsing="false" onAction="#openReservation" prefHeight="24.0" prefWidth="100.0" style="-fx-background-color: blue;" text="Rezervacije" textFill="#f5f2f2" />
      <Button fx:id="logoutBtn" layoutX="473.0" layoutY="329.0" mnemonicParsing="false" onAction="#openLogin" prefHeight="24.0" prefWidth="100.0" style="-fx-background-color: red;" text="Odjava" textFill="#f5f2f2" />
   </children>
</AnchorPane>
